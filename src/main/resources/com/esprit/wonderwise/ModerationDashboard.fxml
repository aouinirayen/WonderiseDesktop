<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="740.0" prefWidth="1070.0" style="-fx-background-color: #ECF0F1;" stylesheets="@styles/moderation.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.esprit.wonderwise.Controller.BackOffice.ModerationController">
    
    <!-- Left Navigation Bar -->
    <left>
        <fx:include source="BackOffice/NavBarBack.fxml" />
    </left>
    
    <center>
        <ScrollPane fitToWidth="true" styleClass="transparent-scroll-pane">
            <content>
                <VBox spacing="15" style="-fx-padding: 25; -fx-background-color: #FFFFFF; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3);">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="backButton" text="← Retour" onAction="#handleBackButton" styleClass="back-button"/>
                        <Label text="Modération de Contenu" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="testModerationButton" text="Tester l'API" onAction="#handleTestModeration" styleClass="secondary-button" />
                        <Label text="En attente:" />
                        <Label fx:id="pendingCountLabel" text="0" style="-fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
                        <Button fx:id="refreshButton" text="Rafraîchir" />
                    </HBox>
                    
                    <Separator />
                    
                    <!-- Statistics Section -->
                    <HBox alignment="CENTER" spacing="25">
                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" style="-fx-background-color: #E74C3C; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 3);">
                            <Label style="-fx-font-size: 18px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial';" text="Contenus en attente" />
                            <Label fx:id="pendingContentCount" style="-fx-font-size: 28px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="0" />
                        </VBox>
                        
                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" style="-fx-background-color: #2ECC71; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 3);">
                            <Label style="-fx-font-size: 18px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial';" text="Contenus approuvés" />
                            <Label fx:id="approvedContentCount" style="-fx-font-size: 28px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="0" />
                        </VBox>
                        
                        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="220.0" style="-fx-background-color: #3498DB; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0, 0, 3);">
                            <Label style="-fx-font-size: 18px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial';" text="Contenus rejetés" />
                            <Label fx:id="rejectedContentCount" style="-fx-font-size: 28px; -fx-text-fill: #ECF0F1; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="0" />
                        </VBox>
                    </HBox>
                    
                    <!-- Filter Section -->
                    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: #F8FAFC; -fx-background-radius: 12;">
                        <Label text="Filtrer par:" style="-fx-font-size: 16px; -fx-text-fill: #2C3E50;" />
                        <ComboBox fx:id="statusFilter" promptText="Status" prefWidth="150" />
                        <ComboBox fx:id="typeFilter" promptText="Type de contenu" prefWidth="200" />
                        <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="250" />
                        <Button text="Appliquer" onAction="#applyFilters" styleClass="primary-button" />
                        <Button text="Réinitialiser" onAction="#resetFilters" styleClass="secondary-button" />
                    </HBox>
                    
                    <!-- Main Content Area -->
                    <HBox spacing="15" VBox.vgrow="ALWAYS">
                        <!-- Card List -->
                        <VBox fx:id="moderationCardsContainer" spacing="15" HBox.hgrow="ALWAYS" styleClass="moderation-list">
                            <Label text="Contenus à modérer" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            
                            <!-- This will be filled dynamically with moderation cards -->
                            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="transparent-scroll-pane">
                                <VBox fx:id="cardContainer" spacing="10" />
                            </ScrollPane>
                        </VBox>
                        
                        <!-- Preview Panel -->
                        <VBox spacing="15" prefWidth="300" styleClass="preview-panel">
                            <Label text="Détails du contenu" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                            
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Type:" style="-fx-font-weight: bold;" />
                                <Label fx:id="previewTypeLabel" text="--" />
                            </HBox>
                            
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Date:" style="-fx-font-weight: bold;" />
                                <Label fx:id="previewDateLabel" text="--" />
                            </HBox>
                            
                            <HBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                                <Label text="Raison:" style="-fx-font-weight: bold;" />
                                <Text fx:id="previewReasonText" text="--" wrappingWidth="240" />
                            </HBox>
                            
                            <Label text="Contenu:" style="-fx-font-weight: bold;" />
                            <TextArea fx:id="contentPreviewArea" VBox.vgrow="ALWAYS" wrapText="true" editable="false" style="-fx-background-radius: 10;" />
                            
                            <VBox spacing="10" style="-fx-background-color: #F8FAFC; -fx-padding: 15; -fx-background-radius: 10;">
                                <Label text="Actions" style="-fx-font-weight: bold;" />
                                <Button fx:id="quickApproveButton" text="✓ Approuver" styleClass="approve-button" prefWidth="270" onAction="#handleQuickApprove" />
                                <Button fx:id="quickRejectButton" text="✕ Rejeter" styleClass="reject-button" prefWidth="270" onAction="#handleQuickReject" />
                            </VBox>
                        </VBox>
                    </HBox>
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15; -fx-background-color: #ECF0F1; -fx-background-radius: 10;">
                        <Label text="Total des contenus modérés : " style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" />
                        <Label fx:id="totalModeratedContent" text="0" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane> 