<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="740.0" prefWidth="1070.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.LoadingController">
    <children>
        <StackPane alignment="CENTER" prefHeight="740.0" prefWidth="1070.0">
            <VBox alignment="CENTER" spacing="50.0">
                <!-- Custom Styled Progress Indicator -->
                <ProgressIndicator fx:id="progressIndicator" prefHeight="100.0" prefWidth="100.0" scaleX="1.8" scaleY="1.8" style="-fx-progress-color: #2e7d6a;">
                    <effect>
                        <Bloom threshold="0.5" />
                    </effect>
                </ProgressIndicator>
                <!-- Stylized Label with Modern Font -->
                <Label text="Preparing Your Experience...">
                    <font>
                        <Font name="Roboto Medium" size="36.0" />
                    </font>
                    <style>
                        -fx-text-fill: #1a3c34; -fx-font-weight: bold; -fx-font-family: 'Roboto'; -fx-letter-spacing: 1.2;
                    </style>
                    <effect>
                        <Bloom threshold="0.3" />
                    </effect>
                </Label>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
