<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="740.0" prefWidth="1070.0" style="-fx-background-color: #F5F7FB;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.Auth.ForgotPasswordController">
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Forgot Password Card -->
        <VBox alignment="CENTER" maxWidth="400" spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 15;">
            <!-- Logo -->
            <ImageView fitHeight="215.0" fitWidth="215.0" preserveRatio="true">
                <image>
                    <Image url="@../images/verif_email.png" />
                </image>
            </ImageView>
            <!-- Title -->
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" text="Mot de passe oublié" />
                <Text style="-fx-fill: #757575; -fx-font-size: 14px;" text="Entrez votre email pour réinitialiser votre mot de passe" />
            </VBox>
            <!-- Form -->
            <VBox spacing="15">
                <TextField fx:id="emailField" focusTraversable="false" promptText="Email" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-border-color: transparent; -fx-padding: 12; -fx-font-size: 14px;" />
            </VBox>
            <!-- Send Button -->
            <Button fx:id="sendButton" onAction="#handleSend" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-min-width: 320; -fx-padding: 14;" text="Envoyer" />
            <!-- Back to Login Link -->
            <HBox alignment="CENTER">
                <Label style="-fx-text-fill: #757575;" text="Souvenir du mot de passe ?" />
                <Hyperlink fx:id="loginLink" onAction="#handleReturnToLogin" style="-fx-text-fill: #2196F3;" text="Se connecter" />
            </HBox>
         <StackPane.margin>
            <Insets bottom="25.0" top="25.0" />
         </StackPane.margin>
        </VBox>
    </StackPane>
</AnchorPane>
