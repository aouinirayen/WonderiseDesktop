<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="740.0" prefWidth="1070.0" style="-fx-background-color: #F5F7FB;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.Auth.ChangePasswordController">
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Change Password Card -->
        <VBox alignment="CENTER" maxWidth="400" spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 15;">
            <!-- Logo -->
            <ImageView fitHeight="215.0" fitWidth="215.0" preserveRatio="true">
                <image>
                    <Image url="@../images/change_pass.png" />
                </image>
            </ImageView>
            <!-- Title -->
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" text="Nouveau mot de passe" />
                <Text style="-fx-fill: #757575; -fx-font-size: 14px;" text="Veuillez entrer et confirmer votre nouveau mot de passe" />
            </VBox>
            <!-- Form -->
            <VBox spacing="15">
                <StackPane alignment="CENTER_RIGHT">
    <PasswordField fx:id="newPasswordField" focusTraversable="false" promptText="Nouveau mot de passe"
                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-border-color: transparent; -fx-padding: 12 36 12 12; -fx-font-size: 14px;" />
    <TextField fx:id="newPasswordTextField" focusTraversable="false" promptText="Nouveau mot de passe"
               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-border-color: transparent; -fx-padding: 12 36 12 12; -fx-font-size: 14px;"
               visible="false" managed="false"/>
    <ImageView fx:id="toggleNewPasswordView" fitHeight="22" fitWidth="28" pickOnBounds="true"
               style="-fx-cursor: hand; -fx-translate-x: -8;"/>
</StackPane>
                <StackPane alignment="CENTER_RIGHT">
    <PasswordField fx:id="confirmPasswordField" focusTraversable="false" promptText="Confirmer le mot de passe"
                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-border-color: transparent; -fx-padding: 12 36 12 12; -fx-font-size: 14px;" />
    <TextField fx:id="confirmPasswordTextField" focusTraversable="false" promptText="Confirmer le mot de passe"
               style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-border-color: transparent; -fx-padding: 12 36 12 12; -fx-font-size: 14px;"
               visible="false" managed="false"/>
    <ImageView fx:id="toggleConfirmPasswordView" fitHeight="22" fitWidth="28" pickOnBounds="true"
               style="-fx-cursor: hand; -fx-translate-x: -8;"/>
</StackPane>
            </VBox>
            <!-- Change Button -->
            <Button fx:id="changePasswordButton" onAction="#handleChangePassword" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-min-width: 320; -fx-padding: 14;" text="Changer le mot de passe" />
         <StackPane.margin>
            <Insets bottom="25.0" top="25.0" />
         </StackPane.margin>
        </VBox>
    </StackPane>
</AnchorPane>
