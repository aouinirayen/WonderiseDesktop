<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.ModerationTestController">
   <center>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="title-label" text="OpenAI Moderation API Test Tool" />
            <VBox spacing="5.0">
               <children>
                  <Label text="API Key (optional - will use default if empty)" />
                  <TextField fx:id="apiKeyField" promptText="Enter your OpenAI API key" />
               </children>
            </VBox>
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Content to Test" />
                  <TextArea fx:id="contentField" prefHeight="200.0" promptText="Enter text to check for moderation" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <Button fx:id="testButton" mnemonicParsing="false" onAction="#testModeration" prefHeight="40.0" prefWidth="200.0" text="Test Content" />
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Result:" />
                  <Label fx:id="resultLabel" styleClass="result-label" text="No results yet" />
                  <Label fx:id="statusLabel" styleClass="status-label" text="Ready" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane> 