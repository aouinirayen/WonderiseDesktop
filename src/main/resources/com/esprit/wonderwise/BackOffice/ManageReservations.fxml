<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER" stylesheets="@ManageReservations.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.BackOffice.ManageReservationsController">
    <Label styleClass="label-title" text="Gestion des réservations" />
    <TableView fx:id="reservationsTable" prefWidth="900">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="offreIdColumn" text="Offre ID" prefWidth="80" />
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="100" />
            <TableColumn fx:id="prenomColumn" text="Prénom" prefWidth="100" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150" />
            <TableColumn fx:id="nombrePersonneColumn" text="Personnes" prefWidth="80" />
            <TableColumn fx:id="dateDepartColumn" text="Date Départ" prefWidth="100" />
            <TableColumn fx:id="statutColumn" text="Statut" prefWidth="100" />
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
        </columns>
    </TableView>
    <Button fx:id="addButton" text="Ajouter une réservation" styleClass="button-add" onAction="#openAddReservationForm" />
</VBox>