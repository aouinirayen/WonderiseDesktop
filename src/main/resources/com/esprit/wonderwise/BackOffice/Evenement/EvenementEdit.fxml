
<BorderPane prefHeight="740.0" prefWidth="1070.0" styleClass="gradient-background" stylesheets="@../../AmineStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.BackOffice.EvenementBackController">
    <left>
        <fx:include source="../NavBarBack.fxml" />
    </left>
    <center>
      
            <!-- Place nomField and lieuField in an HBox to align them horizontally -->
            <HBox spacing="20">
                <TextField fx:id="nomField" promptText="Nom de l'événement" styleClass="modern-input" HBox.hgrow="ALWAYS" />
                <TextField fx:id="lieuField" promptText="Lieu Événement" styleClass="modern-input" HBox.hgrow="ALWAYS" />
            </HBox>
            <ComboBox fx:id="guideComboBox" promptText="Select Guide" styleClass="modern-input" prefWidth="200.0" />
            <TextField fx:id="descriptionField" promptText="Description" styleClass="modern-input" />
            <HBox spacing="20">
                <DatePicker fx:id="datePicker" promptText="Date Événement" styleClass="modern-datepicker" HBox.hgrow="ALWAYS" />
                <TextField fx:id="heureField" promptText="Heure Événement (HH:MM:SS)" styleClass="modern-input" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox spacing="20">
                <TextField fx:id="placeMaxField" promptText="Nombre de places" styleClass="modern-input" HBox.hgrow="ALWAYS" />
                <TextField fx:id="prixField" promptText="Prix" styleClass="modern-input" HBox.hgrow="ALWAYS" />
            </HBox>
            
            <HBox spacing="20">
                <TextField fx:id="paysField" promptText="Pays" styleClass="modern-input" HBox.hgrow="ALWAYS" />
                <TextField fx:id="categorieField" promptText="Catégorie" styleClass="modern-input" HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <ImageView fitHeight="35.0" fitWidth="35.0">
                    <Image url="@../../icons/photo.png" />
                </ImageView>
                <TextField fx:id="photoField" editable="false" prefWidth="300.0" promptText="Photo de l'événement" styleClass="modern-input" />
                <Button onAction="#handlePhotoBrowse" styleClass="upload-button" text="Browse" />
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button onAction="#updateEvenement" style="-fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-padding: 10 25; -fx-background-radius: 10;" text="Update" />
                <Button onAction="#showEvenementList" style="-fx-background-color: #E74C3C; -fx-text-fill: #FFFFFF; -fx-font-size: 14px; -fx-padding: 10 25; -fx-background-radius: 10;" text="Cancel" />
            </HBox>
        </VBox>
    </center>
</BorderPane>