<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane prefWidth="600" prefHeight="500" stylesheets="@AddReservation.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.BackOffice.AddReservationController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="formVBox" alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                    <Label styleClass="label-title" text="Ajouter une réservation" />

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Offre ID :" styleClass="label-field" />
                        <TextField fx:id="offreIdField" promptText="Entrez l'ID de l'offre" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Nom :" styleClass="label-field" />
                        <TextField fx:id="nomField" promptText="Entrez le nom" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Prénom :" styleClass="label-field" />
                        <TextField fx:id="prenomField" promptText="Entrez le prénom" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Email :" styleClass="label-field" />
                        <TextField fx:id="emailField" promptText="Entrez l'email" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Téléphone :" styleClass="label-field" />
                        <TextField fx:id="telephoneField" promptText="Entrez le téléphone" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Ville :" styleClass="label-field" />
                        <TextField fx:id="villeField" promptText="Entrez la ville" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Nombre de personnes :" styleClass="label-field" />
                        <TextField fx:id="nombrePersonneField" promptText="Entrez le nombre" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Date de départ :" styleClass="label-field" />
                        <DatePicker fx:id="dateDepartPicker" styleClass="date-picker" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Heure de départ :" styleClass="label-field" />
                        <TextField fx:id="heureDepartField" promptText="HH:MM" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Type de voyage :" styleClass="label-field" />
                        <ChoiceBox fx:id="typeVoyageChoice" styleClass="choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Solo" />
                                    <String fx:value="Groupe" />
                                    <String fx:value="Famille" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Mode de paiement :" styleClass="label-field" />
                        <ChoiceBox fx:id="modePaiementChoice" styleClass="choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Carte" />
                                    <String fx:value="Espèces" />
                                    <String fx:value="Virement" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Préférences :" styleClass="label-field" />
                        <TextArea fx:id="preferencesVoyageField" promptText="Entrez les préférences" prefHeight="60" styleClass="text-area" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Commentaire :" styleClass="label-field" />
                        <TextArea fx:id="commentaireField" promptText="Entrez un commentaire" prefHeight="60" styleClass="text-area" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Statut :" styleClass="label-field" />
                        <ChoiceBox fx:id="statutChoice" styleClass="choice-box">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="En attente" />
                                    <String fx:value="Confirmée" />
                                    <String fx:value="Annulée" />
                                </FXCollections>
                            </items>
                        </ChoiceBox>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Régime alimentaire :" styleClass="label-field" />
                        <TextField fx:id="regimeAlimentaireField" promptText="Entrez le régime" styleClass="text-field" />
                    </HBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Stripe Payment ID :" styleClass="label-field" />
                        <TextField fx:id="stripePaymentIdField" promptText="Entrez l'ID Stripe" styleClass="text-field" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-background-color: #FFFFFF;">
            <Button fx:id="addButton" text="Ajouter" styleClass="button-add" onAction="#handleAddReservation" />
            <Button fx:id="cancelButton" text="Annuler" styleClass="button-cancel" onAction="#handleCancel" />
        </HBox>
    </bottom>
</BorderPane>