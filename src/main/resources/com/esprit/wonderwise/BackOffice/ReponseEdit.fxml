<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.wonderwise.Controller.BackOffice.ReponseEditController"
            prefHeight="740.0" prefWidth="1070.0"
            style="-fx-background-color: #F4F7F9;"
            stylesheets="@../khalilstyle.css">

    <!-- Barre de navigation latérale -->
    <left>
        <fx:include source="NavBarBack.fxml"/>
    </left>

    <center>
        <!-- Enlever les propriétés AnchorPane.topAnchor et AnchorPane.bottomAnchor ici -->
        <VBox fx:id="formContainer"
              alignment="CENTER" spacing="25"
              style="-fx-padding: 40; -fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 10); -fx-max-width: 600;"
              BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="40" bottom="40"/>
            </BorderPane.margin>
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="35.0" fitWidth="35.0">
                    <Image url="@../../wonderwise/icons/response-icon.png" />
                </ImageView>
                <Text styleClass="header-text" text="Modifier la Réponse" />
            </HBox>

            <TextArea fx:id="responseTextArea"
                      promptText="Entrez votre réponse ici..."
                      prefHeight="200" prefWidth="500"
                      wrapText="true"
                      style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-radius: 10; -fx-border-radius: 10;"/>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="cancelButton"
                        onAction="#handleCancel"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 25;"
                        text="❌ Annuler" />

                <Button fx:id="saveButton"
                        onAction="#handleSave"
                        style="-fx-background-color: #00796B; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 25;"
                        text="✅ Enregistrer" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
