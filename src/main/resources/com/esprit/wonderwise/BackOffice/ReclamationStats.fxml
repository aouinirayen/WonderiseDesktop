<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.esprit.wonderwise.Controller.BackOffice.ReclamationStatsController"
           stylesheets="@../reclamation.css"
           prefHeight="750.0" prefWidth="1100.0">

    <VBox spacing="20" alignment="TOP_CENTER">
        <HBox spacing="30" alignment="CENTER">
            <VBox alignment="CENTER">
                <Label fx:id="totalLabel" text="Total" />
                <Button fx:id="totalButton" text="Total" />
            </VBox>
            <VBox alignment="CENTER">
                <Label fx:id="frequentLabel" text="Fréquent" />
                <Button fx:id="frequentButton" text="Fréquent" />
            </VBox>
        </HBox>

        <!-- Chart Section -->
        <VBox spacing="15" alignment="CENTER" styleClass="chart-card">

            <BarChart fx:id="barChart"
                      title="📊 Réclamations les plus fréquentes"
                      categoryGap="30" barGap="10"
                      prefHeight="400" prefWidth="700"
                      legendVisible="false">
                <xAxis>
                    <CategoryAxis fx:id="categoryAxis" label="Objet" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="numberAxis" label="Occurrences" />
                </yAxis>
            </BarChart>

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="✓ Supprimer la plus fréquente"
                        onAction="#handleDeleteMostFrequent"
                        styleClass="primary-button" />
                <Button text="← Retour"
                        fx:id="backButton"
                        onAction="#handleBack" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>
