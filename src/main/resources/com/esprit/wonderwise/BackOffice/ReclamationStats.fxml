<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.esprit.wonderwise.Controller.BackOffice.ReclamationStatsController"
           stylesheets="@../reclamation.css"
           prefHeight="750.0" prefWidth="1100.0">

    <VBox spacing="20" alignment="TOP_CENTER">
        <!-- Metrics -->
        <HBox spacing="30" alignment="CENTER">
            <Label fx:id="totalLabel" styleClass="metric-card"/>
            <Label fx:id="frequentLabel" styleClass="metric-card"/>
            <Label fx:id="updatedLabel" styleClass="metric-card"/>
        </HBox>

        <!-- Chart Section -->
        <VBox spacing="15" alignment="CENTER" styleClass="chart-card">

            <!-- Le Label manuel est optionnel maintenant -->
            <!--<Label text="📊 Réclamations les plus fréquentes"
                   styleClass="title-label special-title"/>-->

            <BarChart fx:id="barChart"
                      title="📊 Réclamations les plus fréquentes"
                      categoryGap="30" barGap="10"
                      prefHeight="400" prefWidth="700"
                      legendVisible="false">
                <xAxis>
                    <CategoryAxis label="Type"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Occurrences"/>
                </yAxis>
            </BarChart>

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="✓ Supprimer la plus fréquente"
                        onAction="#handleDeleteMostFrequent"
                        styleClass="primary-button"/>
                <Button text="← Retour"
                        onAction="#handleBack"
                        styleClass="secondary-button"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>
