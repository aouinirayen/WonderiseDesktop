<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.Button?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.TextArea?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.image.Image?>
        <?import javafx.scene.image.ImageView?>
        <?import javafx.scene.layout.BorderPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.text.Text?>

<BorderPane prefHeight="740.0" prefWidth="1070.0"
            stylesheets="@../khalilstyle.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.esprit.wonderwise.Controller.FrontOffice.ListeReclamation">

<top>
    <fx:include source="NavBarFront.fxml" />
</top>

<center>
    <VBox alignment="CENTER" spacing="25"
          style="-fx-padding: 40; -fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 10); -fx-max-width: 600;"
          BorderPane.alignment="CENTER">
        <BorderPane.margin>
            <Insets top="40" bottom="40"/>
        </BorderPane.margin>

        <HBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50.0" fitWidth="50.0">
                <Image url="@../icons/complaint.png" />
            </ImageView>
            <Text styleClass="header-text" text="Mes Réclamations" />
        </HBox>

        <VBox fx:id="listeReclamationsVBox" spacing="15" alignment="TOP_CENTER"
              style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 20;
                                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 12, 0, 0, 5);"
              maxWidth="480" maxHeight="500">
            <Label fx:id="labelMesReclamations" text="🗂️ Mes Réclamations"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2E3C43;" />
            <!-- Les cartes de réclamations seront ajoutées dynamiquement ici -->
        </VBox>
    </VBox>
</center>
</BorderPane>
