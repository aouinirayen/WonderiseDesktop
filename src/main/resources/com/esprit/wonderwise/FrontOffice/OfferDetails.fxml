<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="25" stylesheets="@OfferDetails.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.FrontOffice.OfferDetailsController">
    <Label fx:id="titleLabel" styleClass="offer-title" text="Titre de lâ€™offre" />
    
    <Text fx:id="descriptionText" styleClass="offer-description" wrappingWidth="600" text="Description" />
    
    <HBox spacing="30" alignment="CENTER" styleClass="content-container">
        <VBox styleClass="image-container">
            <ImageView fx:id="imageView" fitWidth="300" fitHeight="200" preserveRatio="true" />
        </VBox>
        
        <VBox spacing="20" styleClass="info-container">
            <Label fx:id="priceLabel" styleClass="offer-price" text="Prix" />
            
            <VBox styleClass="date-box">
                <Label fx:id="dateLabel" styleClass="date-label" text="Dates" />
            </VBox>
            
            <Label fx:id="placesLabel" styleClass="places-label" text="Places" />
        </VBox>
    </HBox>

    <Button fx:id="bookButton" styleClass="book-now-button" text="Book Now" onAction="#openReservationForm" />
</VBox>