<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500" prefWidth="600" stylesheets="@AddReservationFront.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.FrontOffice.AddReservationFrontController">
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="formVBox" alignment="CENTER" spacing="15" style="-fx-padding: 20;">
                    <Label styleClass="label-title" text="Formulaire de Réservation" />

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Nom  :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <TextField fx:id="nomField" promptText="Entrez votre nom" styleClass="text-field" />
                            <Label fx:id="nomError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Prénom :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <TextField fx:id="prenomField" promptText="Entrez votre prénom" styleClass="text-field" />
                            <Label fx:id="prenomError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Email :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <TextField fx:id="emailField" promptText="Entrez votre email" styleClass="text-field" />
                            <Label fx:id="emailError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Téléphone :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <TextField fx:id="telephoneField" promptText="Entrez votre téléphone" styleClass="text-field" />
                            <Label fx:id="telephoneError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Nombre de personnes :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <TextField fx:id="nombrePersonneField" promptText="Entrez le nombre" styleClass="text-field" />
                            <Label fx:id="nombrePersonneError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Ville :" />
                            <TextField fx:id="villeField" promptText="Entrez votre ville" styleClass="text-field" />
                            <Label fx:id="villeError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Date de départ :" />
                            <DatePicker fx:id="dateDepartPicker" styleClass="date-picker" />
                            <Label fx:id="dateDepartError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Heure de départ :" />
                            <TextField fx:id="heureDepartField" promptText="HH:MM" styleClass="text-field" />
                            <Label fx:id="heureDepartError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Type de voyage :" />
                            <ChoiceBox fx:id="typeVoyageChoice" styleClass="choice-box">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Solo" />
                                        <String fx:value="Groupe" />
                                        <String fx:value="Famille" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>
                            <Label fx:id="typeVoyageError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Mode de paiement :">
                                <graphic>
                                    <Label styleClass="required-field" text="*" />
                                </graphic>
                            </Label>
                            <ChoiceBox fx:id="modePaiementChoice" styleClass="choice-box">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Carte" />
                                        <String fx:value="Espèces" />
                                        <String fx:value="Virement" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>
                            <Label fx:id="modePaiementError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Régime alimentaire :" />
                            <TextField fx:id="regimeAlimentaireField" promptText="Entrez vos restrictions alimentaires" styleClass="text-field" />
                            <Label fx:id="regimeAlimentaireError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Préférences :" />
                            <TextArea fx:id="preferencesVoyageField" prefHeight="60" promptText="Entrez vos préférences" styleClass="text-area" />
                            <Label fx:id="preferencesVoyageError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Commentaire :" />
                            <TextArea fx:id="commentaireField" prefHeight="60" promptText="Entrez un commentaire (optionnel)" styleClass="text-area" />
                            <Label fx:id="commentaireError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Statut :" />
                            <ChoiceBox fx:id="statutChoice" styleClass="choice-box">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="En attente" />
                                        <String fx:value="Confirmée" />
                                        <String fx:value="Annulée" />
                                    </FXCollections>
                                </items>
                            </ChoiceBox>
                            <Label fx:id="statutError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10" styleClass="hidden-field">
                        <VBox spacing="5" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <Label styleClass="label-field" text="Stripe Payment ID :" />
                            <TextField fx:id="stripePaymentIdField" promptText="Entrez l'ID Stripe" styleClass="text-field" />
                            <Label fx:id="stripePaymentIdError" styleClass="error-label" managed="false" visible="false" />
                        </VBox>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10; -fx-background-color: #FFFFFF;">
            <Button fx:id="addButton" onAction="#handleAddReservation" styleClass="button-add" text="Réserver" />
            <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="button-cancel" text="Annuler" />
        </HBox>
    </bottom>
</BorderPane>
