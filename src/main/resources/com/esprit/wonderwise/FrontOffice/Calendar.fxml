<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="5" styleClass="calendar-container" stylesheets="@Calendar.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.FrontOffice.CalendarController">
    <padding>
        <Insets top="5" right="10" bottom="5" left="10"/>
    </padding>

    <!-- Month/Year Navigation -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="previousButton" text="&lt;" styleClass="calendar-nav-button"/>
        <Label fx:id="monthYearLabel" styleClass="month-year-label"/>
        <Button fx:id="nextButton" text="&gt;" styleClass="calendar-nav-button"/>
    </HBox>

    <!-- Calendar Grid -->
    <GridPane fx:id="calendarGrid" alignment="CENTER" hgap="2" vgap="2">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="25" prefWidth="25"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="20" prefHeight="20" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="25" prefHeight="25" vgrow="SOMETIMES"/>
        </rowConstraints>
    </GridPane>
</VBox>
