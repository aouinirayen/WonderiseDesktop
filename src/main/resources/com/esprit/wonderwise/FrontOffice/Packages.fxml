<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<VBox alignment="TOP_CENTER" spacing="20" stylesheets="@Packages.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.wonderwise.Controller.FrontOffice.PackagesController">
    <HBox styleClass="section-title-container" alignment="CENTER">
        <Label styleClass="section-title" text="Nos Offres de Voyage" />
    </HBox>
    
    <FlowPane fx:id="offersPane" hgap="30" vgap="30" alignment="TOP_CENTER" styleClass="offers-container">
        <!-- Les cartes seront ajoutées dynamiquement via le contrôleur -->
        <VBox styleClass="card">
            <ImageView styleClass="card-image" fitWidth="260" fitHeight="180" />
            <VBox spacing="8" alignment="CENTER">
                <Label styleClass="card-title" text="Escapade à Rome" />
                <Label styleClass="card-price" text="750,00 TND" />
                
                <VBox styleClass="date-container">
                    <HBox spacing="5">
                        <Label styleClass="date-label" text="Du:" />
                        <Label styleClass="date-info" text="15/05/2025" />
                    </HBox>
                    <HBox spacing="5">
                        <Label styleClass="date-label" text="Au:" />
                        <Label styleClass="date-info" text="22/05/2025" />
                    </HBox>
                </VBox>
                
                <Label styleClass="available-places" text="12 places disponibles" />
                <Button styleClass="details-button" text="Details" />
            </VBox>
        </VBox>
    </FlowPane>
</VBox>